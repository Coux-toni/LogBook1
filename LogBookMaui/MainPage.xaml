<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:LogBookMaui.Viewmodels"
             x:DataType="viewmodels:MainViewmodel"
             x:Class="LogBookMaui.MainPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             >

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Appearing" Command="{Binding LoadDataCommand}"/>
    </ContentPage.Behaviors>

    <Grid RowDefinitions="Auto,180">
        <Label Text="{Binding Header}"/>
        <Grid RowDefinitions="Auto,*" Grid.Row="1">
            <!-- Header -->
            <Grid ColumnDefinitions="100,2*,*,*">
                <Label Text="Datum" Padding="5"/>
                <Label Grid.Column="1" Text="Beschreibung" Padding="5"/>
                <Label Grid.Column="2" Text="Von" Padding="5"/>
                <Label Grid.Column="3" Text="Nach" Padding="5"/>
            </Grid>
            <!-- Data -->
            <CollectionView Grid.Row="1">
                <CollectionView.EmptyView>
                    <Label Text="Es wurde keine Fahrt hinzugefügt"></Label>
                </CollectionView.EmptyView>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>
